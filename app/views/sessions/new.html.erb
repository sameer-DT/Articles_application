<h1 class="text-center mt-4">Log in</h1>
<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
      <div class="form-group row mb-3">
        <%= f.label :username, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control  w-20", placeholder: "Enter Username" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= f.label :password, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control w-20", placeholder: "Enter Password" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>
  <%= link_to ' Cancel and return to articles listing ', articles_path, class: "text-info mt-3" %>
</div>
